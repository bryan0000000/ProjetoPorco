<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoPorco.PedidosCriar">

    <StackLayout Padding="30" VerticalOptions="Center">

        <Label Text="criar pedidos"
               HorizontalOptions="Center"
               FontSize="Large"
               TextColor="White" />

        <StackLayout BackgroundColor="#444444"
                     Padding="20"
                     Spacing="15">

            <Entry x:Name="Nome"
                   Placeholder="nome"
                   TextColor="Black"
                   BackgroundColor="White"
                   HeightRequest="40" />

            <Entry x:Name="nTelefone"
                   Placeholder="telefone"
                   TextColor="Black"
                   BackgroundColor="White"
                   HeightRequest="40" />

            <Entry x:Name="nEmail"
                   Placeholder="email"
                   TextColor="Black"
                   BackgroundColor="White"
                   HeightRequest="40" />

            <Button Text="cadastrarcliente"
                    BackgroundColor="#c5e1a5"
                    TextColor="Black"
                    CornerRadius="10"
                    Clicked="OnCadastrarClienteClicked" />

        </StackLayout>
    </StackLayout>

</ContentPage>